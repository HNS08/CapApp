<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search_icon"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search your favourite food"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:singleLine="true"/>
    </LinearLayout>

    <!-- Horizontal ScrollView for Categories -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Category 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chaat"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <!-- Category 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desserts"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>

            <!-- Category 3 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <!-- Category 4 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <!-- Category 5 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <!-- Category 6-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
            <!-- Category 7 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juices"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="10dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Scrollable Menu List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Repeat this CardView for each item -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <!-- Row 1: Time, Item Name, Favourite Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/time_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 mins"
                            android:textSize="16sp"
                            android:layout_marginStart="5dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Jumbo Vadapav"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_weight="1"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/favorites_icon"/>
                    </LinearLayout>

                    <!-- Row 2: Image & Description -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="80dp"
                            android:src="@drawable/category1"
                            android:scaleType="centerCrop"
                            android:layout_marginEnd="12dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="A relishing, mouth-watering combination of bread &amp; fried potato with sides."
                            android:textSize="14sp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <!-- Row 3: Quantity Selector & Price -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp">

                        <!-- Quantity Selector below Image -->
                        <LinearLayout
                            android:id="@+id/quantity_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_alignParentStart="true"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp">

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/minus_3108"
                                android:backgroundTint="@color/grey"
                                android:background="@drawable/rounded"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="16sp"
                                android:layout_marginHorizontal="10dp"/>

                            <ImageButton
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/rounded"
                                android:backgroundTint="@color/red"
                                app:tint="@color/white"
                                android:src="@drawable/plus_3107" />
                        </LinearLayout>

                        <!-- Price aligned to the bottom right -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹ 50.00"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/red"
                            android:layout_alignParentEnd="true"
                            android:layout_alignBottom="@id/quantity_selector"/>
                    </RelativeLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
