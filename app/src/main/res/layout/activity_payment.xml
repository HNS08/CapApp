<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Payment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/backbtn"
        android:contentDescription="Back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_margin="30dp"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <!-- Payment Title -->
    <TextView
        android:id="@+id/tvPaymentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif" />

    <!-- Payment Details -->
    <TextView
        android:id="@+id/tvPaymentDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 items | Total Payment: Rs. 90"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_below="@id/tvPaymentTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"/>

    <!-- Step Progress Layout -->
    <LinearLayout
        android:id="@+id/stepProgressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPaymentDetails"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Step 1 (Active ) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/circle_gray"
                android:text="1"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Items"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Line between Step 1 and Step 2 -->
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginBottom="8dp"
            android:layout_height="3dp"
            android:background="@color/grey"
            android:layout_gravity="center_vertical"/>

        <!-- Step 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:background="@drawable/circle_gray"
                android:text="2"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Summary"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Line between Step 2 and Step 3 -->
        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="3dp"
            android:layout_marginBottom="8dp"
            android:background="@color/grey"
            android:layout_gravity="center_vertical"/>

        <!-- Step 3 (Inactive) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/circle_red"
                android:text="3"
                android:fontFamily="sans-serif"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Select Mode Title -->
    <TextView
        android:id="@+id/tvSelectMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Mode"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/stepProgressLayout"
        android:layout_marginTop="30dp"/>

    <!-- Payment Options -->
    <RelativeLayout
        android:id="@+id/modeselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelectMode"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- UPI Payment Option -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/rbUPI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:buttonTint="@color/grey"/>

                    <ImageView
                        android:id="@+id/imgUPI"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/mode_upi"
                        android:layout_toEndOf="@id/rbUPI"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvUPI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UPI"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/imgUPI"
                        android:fontFamily="sans-serif"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <!-- Virtual Wallet Option -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/rbWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:buttonTint="@color/grey"/>

                    <ImageView
                        android:id="@+id/imgWallet"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/mode_virtual_wallet"
                        android:layout_toEndOf="@id/rbWallet"
                        android:layout_marginStart="5dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Virtual Wallet"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/black"
                        android:layout_toEndOf="@id/imgWallet"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>

    <!-- Terms & Conditions Text -->
    <TextView
        android:id="@+id/tvTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/terms_background"
        android:textSize="12dp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/modeselect"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="100dp"
        android:text="@string/terms_text"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceSmall"
        tools:ignore="NotSibling" />

    <!-- Place Order Button -->
    <Button
        android:id="@+id/btnPlaceOrder"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Place Order"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:layout_below="@+id/tvTerms"
        android:textStyle="bold"
        android:fontFamily="sans-serif"/>

    <!-- Bottom Navigation Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@android:color/white">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottomnav_background"
            app:menu="@menu/bottomnav_menu"
            android:paddingTop="5dp"
            android:layout_marginBottom="-10dp"
            app:itemIconTint="@drawable/item_selector"
            app:itemTextColor="@drawable/item_selector"
            style="@style/NoRippleEffect"
            app:itemTextAppearanceActive="@style/BottomNavTextStyle"
            app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
            app:labelVisibilityMode="labeled" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>